{
  "compilerOptions": {
    /* === Estructura del proyecto === */
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Target y módulo === */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* === Salida === */
    "noEmit": false,

    /* === Tipos y librerías === */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "express"],

    /* === Mapas y declaraciones === */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* === Other === */
    "noImplicitAny": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
